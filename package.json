{
  "name": "dev-master",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "author": "kuyep",
  "scripts": {
    "server": "cd server && node --watch index.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\"",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.devmaster.app",
    "productName": "DevMaster",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": "nsis",
      "icon": "client/dist/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "client/dist/favicon.ico",
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "title": "DevMaster Installer"
    },
    "files": [
      "main.js",
      "server/**/*",
      "client/dist/**/*",
      "package.json",
      "!server/node_modules"
    ],
    "asar": true
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild", 
      "cpu-features",
      "ssh2"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^33.0.0", 
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "fix-path": "3.0.0",
    "socket.io": "^4.8.3"
  }
}
